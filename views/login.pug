extends base.pug
block style
    style 
        include ../static/style2.css
        include ../static/styleLogin.css
block navbar 
block append intro 

    form( action='/login', method='post', id='loginContainer')
        label(for="username") 
            |Please Login to continue
        //- - var messages = ['heelo']
        if messages
            each message in messages 
                h3(style='color:red')=message
                
        input(type="text" name='username' id='name'  placeholder='Enter username' required)
        input(type="text" name='password' id='key' placeholder='Enter password' required)
        button(type='submit' id='loginBtn')
            |Login
        label(for="signup") 
            |Don't have an account?
            br
            |Register now 
        a(href="/register")  
            button(type='button')
                |Register
block append scripts 
    script(src="../static/login.js") 
    